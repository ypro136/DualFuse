    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "request": "launch",
            "stopAtEntry": false,
            "name": "Launch with bochs",
            "cwd": "${workspaceFolder}",
            "program": "/home/ypro136/progs/DualFuse/kernel/bin/DualFuse.kernel",
            "terminalKind": "integrated",
            "preLaunchTask": "bochs script"
            
          },
          {
            "name": "Launch qemu with GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/ypro136/progs/DualFuse/kernel/bin/DualFuse.kernel",
            "cwd": "${workspaceFolder}",
            "logging": {
                "engineLogging": true,
                "traceResponse": false
            },
            "targetArchitecture": "x86_64",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "miDebuggerArgs": "-x ${workspaceFolder}/.gdbinit",
            "stopAtConnect": false,
            "customLaunchSetupCommands": [
                {
                    "text": "target remote localhost:1234",
                    "description": "Connect to QEMU remote debugger"
                },
                {
                    "text": "add-symbol-file /home/ypro136/progs/DualFuse/kernel/bin/DualFuse.kernel 0xffffffff80000000",
                    "description": "Load kernel symbols at correct address"
                },
                {
                    "text": "info files",
                    "description": "Show loaded files"
                }

            ],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Source .gdbinit",
                    "text": "source ${workspaceFolder}/.gdbinit",
                    "ignoreFailures": true
                }

            ],
            "preLaunchTask": "qemu script"
        }
        

    ]
}